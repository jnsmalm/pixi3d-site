---
import Card from "../components/Card.astro";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<script>
	import { DancingStormtrooper } from "../demo/dancing-stormtrooper";
	import { Loader } from "../scripts/loader";
	Loader.load(
		new DancingStormtrooper(
			document.getElementById("demo") as HTMLCanvasElement,
			document.getElementById("demo-container") as HTMLElement
		)
	);
</script>

<meta charset="utf-8" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />
<meta
	property="og:title"
	content="Pixi3D - The 3D renderer for PixiJS. Seamless integration with 2D
applications."
/>
<meta property="og:image" content="" />
<meta property="og:description" content="" />
<meta property="og:url" content={canonicalURL} />
<title>
	Pixi3D - The 3D renderer for PixiJS. Seamless integration with 2D
	applications.
</title>

<body>
	<div class="container mx-auto px-4 py-4">
		<div class="container bg-red-300">
			<div id="demo-container" class="container relative h-64 z-10">
				<canvas id="demo" class="w-full"></canvas>
			</div>
			<div class="text-center relative bottom-10 z-20">
				The 3D renderer for PixiJS. Seamless integration with 2D applications.
			</div>
		</div>
		<div class="flex justify-center gap-4 mt-4 mb-4">
			<div class="w-24 bg-red-100 p-4">Get started</div>
			<div class="w-24 bg-red-200 p-4">API</div>
			<div class="w-24 bg-red-300 p-4">GitHub</div>
		</div>
		<div class="columns-3xs gap-8">
			<div>
				<Card
					title="Dancing stormtrooper"
					href="/demo/dancing-stormtrooper"
					image="/images/dancing-stormtrooper-card.png"
				/>
				<Card title="Demo" href="/" image="" />
				<Card title="Demo" href="/" image="" />
				<Card title="Demo" href="/" image="" />
				<Card title="Demo" href="/" image="" />
			</div>
		</div>
	</div>
</body>
