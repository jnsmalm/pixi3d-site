---
import Card from "../components/Card.astro";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<script>
	import { Logo } from "../demo/logo";
	import { Loader } from "../scripts/loader";
	Loader.load(
		new Logo(
			document.getElementById("demo") as HTMLCanvasElement,
			document.getElementById("demo-container") as HTMLElement
		)
	);
</script>

<meta charset="utf-8" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />
<meta
	property="og:title"
	content="Pixi3D - The 3D renderer for PixiJS. Seamless integration with 2D
applications."
/>
<meta property="og:image" content="" />
<meta property="og:description" content="" />
<meta property="og:url" content={canonicalURL} />
<title>
	Pixi3D - The 3D renderer for PixiJS. Seamless integration with 2D
	applications.
</title>

<body class="bg-gray-300">
	<div class="container mx-auto px-4 py-4">
		<div class="container">
			<div id="demo-container" class="container relative h-64 z-10">
				<canvas id="demo" class="w-full"></canvas>
			</div>
			<div class="text-center relative bottom-14 z-20 font-sans font-bold text-2xl">
				The 3D renderer for PixiJS. Seamless integration with 2D applications.
			</div>
		</div>
		<div class="flex justify-center gap-4 mb-16 text-gray-300">
			<div class="w-36 bg-zinc-800 p-2 rounded-lg text-center uppercase">Get started</div>
			<div class="w-36 bg-zinc-800 p-2 rounded-lg text-center uppercase">API</div>
			<div class="w-36 bg-zinc-800 p-2 rounded-lg text-center uppercase">GitHub</div>
		</div>
		<div class="columns-3xs gap-8 center">
			<div>
				<Card
					title="Dancing stormtrooper"
					href="/demo/dancing-stormtrooper"
					image="/images/dancing-stormtrooper-card.png"
				/>
				<Card
					title="Shattering statue"
					href="/demo/shattering-statue"
					image="/images/dancing-stormtrooper-card.png"
				/>
				<Card
					title="Desert racing"
					href="/demo/desert-racing"
					image="/images/dancing-stormtrooper-card.png"
				/>
			</div>
		</div>
	</div>
</body>
